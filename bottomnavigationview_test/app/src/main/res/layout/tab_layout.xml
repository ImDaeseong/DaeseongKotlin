<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#FFFFFF">

        <include
            android:id="@+id/tab_item1"
            layout="@layout/tab_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/space1" />

        <View
            android:id="@+id/space1"
            style="@style/Divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tab_item1"
            app:layout_constraintRight_toLeftOf="@+id/tab_item2"
            />

        <include
            android:id="@+id/tab_item2"
            layout="@layout/tab_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/space1"
            app:layout_constraintRight_toLeftOf="@+id/space2" />

        <View
            android:id="@+id/space2"
            style="@style/Divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tab_item2"
            app:layout_constraintRight_toLeftOf="@+id/tab_item3" />

        <include
            android:id="@+id/tab_item3"
            layout="@layout/tab_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/space2"
            app:layout_constraintRight_toLeftOf="@+id/space3" />

        <View
            android:id="@+id/space3"
            style="@style/Divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tab_item3"
            app:layout_constraintRight_toLeftOf="@+id/tab_item4" />

        <include
            android:id="@+id/tab_item4"
            layout="@layout/tab_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/space3"
            app:layout_constraintRight_toLeftOf="@+id/space4" />

        <View
            android:id="@+id/space4"
            style="@style/Divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tab_item4"
            app:layout_constraintRight_toLeftOf="@+id/tab_item5" />

        <include
            android:id="@+id/tab_item5"
            layout="@layout/tab_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/space4"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
